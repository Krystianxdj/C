  Display(Opcja1);
  


}



int Display(int Option)
{
  if(Opcja1 == Option)
  {
    printf("Wybrano opcje nr.1");
  }
  else if(Opcja2 == Option)
  {
    printf("opcja 2b");
  }
  else
  {

  }

  return 0;
}
